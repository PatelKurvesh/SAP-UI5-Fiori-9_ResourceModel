<mvc:View controllerName="GithubSAP-UI5-Fiori-9_ResourceModel.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					
				<form:SimpleForm>
						<form:content>
							<Button text="English" press="onClickEng"></Button>
							<Button text="French" press="onClickFr"></Button>
							<!--<Button text="Hindi" press="onClickHin"></Button>-->
							
							<Label id="idName" text="{= ${/lang} === 'FR' ?  ${i18n_fr>LBL_fName} : ${i18n>LBL_fName}}"></Label>
							<Input></Input>
							<Label text="{i18n>LBL_mName}"></Label>
							<Input></Input>
							<Label text="{i18n>LBL_lName}"></Label>
							<Input></Input>
							<Label text="{i18n>LBL_no}"></Label>
							<Input></Input>
						</form:content>
					</form:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>